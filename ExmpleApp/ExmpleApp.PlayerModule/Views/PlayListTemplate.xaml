                    </StackPanel>-->

                </Grid>
            </Expander>



        </Grid>

    </DataTemplate>

    <Style x:Key="PlaylistViewStyle"
           TargetType="{x:Type ContentControl}">
        <Setter Property="Focusable"
                Value="False" />
        <Setter Property="ContentTemplate"
                Value="{StaticResource PlaylistViewTemplate}" />
    </Style>

</ResourceDictionary>